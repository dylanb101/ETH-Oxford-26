  },
  "dependencies": {
    "@flarenetwork/flare-periphery-contracts": "^0.1.40",
    "@openzeppelin/contracts": "^5.4.0",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^6.16.0",
    "express": "^4.18.2",
    "merkletreejs": "^0.6.0"
  }

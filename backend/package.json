{
  "name": "flare-backend",
  "version": "1.0.0",
  "description": "Express.js backend server for Flare Network flight insurance",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "compile": "hardhat compile",
